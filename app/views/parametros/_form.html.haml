= form_for @parametro do |f|
  - if @parametro.errors.any?
    #error_explanation
      %h2= "#{pluralize(@parametro.errors.count, "error")} prohibited this parametro from being saved:"
      %ul
        - @parametro.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :nombre
    = f.text_field :nombre
  .field
    = f.label :valor
    = f.text_field :valor
  .actions
    = f.submit 'Save'
