= form_for @area_estudio do |f|
  - if @area_estudio.errors.any?
    #error_explanation
      %h2= "#{pluralize(@area_estudio.errors.count, "error")} prohibited this area_estudio from being saved:"
      %ul
        - @area_estudio.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :nombre
    = f.text_field :nombre
  .actions
    = f.submit 'Save'
