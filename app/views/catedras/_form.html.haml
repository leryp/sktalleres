= form_for @catedra do |f|
  - if @catedra.errors.any?
    #error_explanation
      %h2= "#{pluralize(@catedra.errors.count, "error")} prohibited this catedra from being saved:"
      %ul
        - @catedra.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :nombre
    = f.text_field :nombre
  .field
    = f.label :descripcion
    = f.text_field :descripcion
  .field
    = f.label :logo_url
    = f.text_field :logo_url
  .field
    = f.label :video_url
    = f.text_field :video_url
  .actions
    = f.submit 'Save'
